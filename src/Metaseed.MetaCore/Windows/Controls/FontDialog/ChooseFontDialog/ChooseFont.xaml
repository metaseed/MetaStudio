<Window x:Class="Metaseed.Windows.Controls.ChooseFont"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:win="clr-namespace:System.Windows;assembly=PresentationCore"
	xmlns:local="clr-namespace:Metaseed.Windows.Controls"
        xmlns:cv="clr-namespace:Metaseed.Windows.Data.Converters"
    Title="Font" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
	MinHeight="600" MinWidth="600" Height="600" Width="600" ResizeMode="CanResizeWithGrip"
	ShowInTaskbar="False">
	
	<Window.Resources>
		<Style x:Key="dialogButtonStyle" TargetType="Button">
			<Setter Property="Margin" Value="5"/>
			<Setter Property="Width" Value="75"/>
		</Style>
		<Style x:Key="dialogButtonPanelStyle">
			<Setter Property="FrameworkElement.Margin" Value="0,0,10,0"/>
			<Setter Property="FrameworkElement.HorizontalAlignment" Value="Right"/>
		</Style>
		
		<!--Main panel elements-->
		<Style x:Key="mainLabelStyle" TargetType="Label">
			<Setter Property="Margin" Value="3 0 0 0"/>
			<Setter Property="Padding" Value="3"/>
		</Style>
		<Style x:Key="mainTextBoxStyle" TargetType="TextBox">
			<Setter Property="Margin" Value="3 0 3 0"/>
			<Setter Property="Padding" Value="3"/>
			<Setter Property="BorderThickness" Value="0.75"/>
			<Setter Property="Validation.ErrorTemplate">
				<Setter.Value>
					<ControlTemplate>
						<DockPanel LastChildFill="True">
							<Ellipse DockPanel.Dock="Right" Margin="2,0"
							ToolTip="{Binding ElementName=adornerPlaceholder, 
									Path=AdornedElement.(Validation.Errors)[0].ErrorContent}"
							Width="10" Height="10">
								<Ellipse.Fill>
									<LinearGradientBrush>
										<GradientStop Color="#11FF1111" Offset="0" />
										<GradientStop Color="#FFFF0000" Offset="1" />
									</LinearGradientBrush>
								</Ellipse.Fill>
							</Ellipse>
							<Border BorderBrush="Red" BorderThickness="2">
								<AdornedElementPlaceholder Name="adornerPlaceholder"/>
							</Border>
						</DockPanel>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
		<Style x:Key="mainListBoxStyle" TargetType="ListBox">
			<Setter Property="Margin" Value="3 0 3 0"/>
			<Setter Property="Padding" Value="3"/>
			<Setter Property="BorderThickness" Value="0.75"/>
		</Style>
		<Style x:Key="decorationChkBoxStyle" TargetType="CheckBox">
			<Setter Property="Margin" Value="5 1 5 1"/>
		</Style>

		<cv:TypefaceToStringConverter x:Key="typefaceToStringConverter"/>
		<cv:ColorToNamedBrushConverter x:Key="colorToNamedBrushConverter"/>
		<cv:ColorToBrushConverter x:Key="colorToBrushConverter"/>
		<cv:InvertBoolConverter x:Key="boolInverter"/>
		<cv:IntValueToParamEqualityConverter x:Key="intValueToParamEquality"/>
		<cv:ValueToParamEqualityConverter x:Key="valueToParamEquality"/>

		<DataTemplate x:Key="typefaceTemplate">
			<TextBlock Text="{Binding Converter={StaticResource typefaceToStringConverter}}"/>
		</DataTemplate>
		<DataTemplate x:Key="namedBrushTemplate">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto" SharedSizeGroup="colorNames"/>
					<ColumnDefinition SharedSizeGroup="colors"/>
				</Grid.ColumnDefinitions>
				<TextBlock Text="{Binding Path=Name}" Margin="1"/>
				<Rectangle Grid.Column="1" Fill="{Binding Path=Brush}" Height="15" Width="15" Margin="1"/>
			</Grid>
		</DataTemplate>
	</Window.Resources>

	<DockPanel>
		<!--Dialog Buttons-->
		<Grid DockPanel.Dock="Bottom" Grid.IsSharedSizeScope="True"
			  Style="{StaticResource dialogButtonPanelStyle}">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto" SharedSizeGroup="dialogButtons"/>
				<ColumnDefinition Width="Auto" SharedSizeGroup="dialogButtons"/>
			</Grid.ColumnDefinitions>

			<Button Name="Button_OK" IsDefault="True" IsEnabled="False" Click="Button_OK_Click"
					Style="{StaticResource dialogButtonStyle}">_OK</Button>
			<Button Grid.Column="1" IsCancel="True" Style="{StaticResource dialogButtonStyle}">_Cancel</Button>
		</Grid>
		
		<!-- ChoseFont panel -->
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition MinHeight="250"/> <!-- Main panel -->
				<RowDefinition Height="Auto" MaxHeight="200"/> <!-- Font details -->
				<RowDefinition Height="Auto" /> <!-- Preview -->
			</Grid.RowDefinitions>
			
			<!--Main panel-->
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition /><!--Font Family column-->
					<ColumnDefinition Width="Auto"/><!--Typeface and other stuff column-->
				</Grid.ColumnDefinitions>
				
				<!--Font Family column-->
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition Height="Auto"/>	<!-- Title -->
						<RowDefinition Height="Auto"/> <!-- Text Box -->
						<RowDefinition /> <!-- List Box -->
					</Grid.RowDefinitions>

					<!--Font Family column-->
					<Label Style="{StaticResource mainLabelStyle}">Font family:</Label>
					<TextBox Grid.Row="1" Name="txtFontFamily" 
							 Style="{StaticResource mainTextBoxStyle}"
							 Text="{Binding Path=FontFamily}"
							 TextChanged="txtFontFamily_TextChanged" 
							 IsTabStop="true" TabIndex="1"/>
					<ListBox Grid.Row="2" Name="lbxFontFamily" 
							Style="{StaticResource mainListBoxStyle}"
							ItemsSource="{Binding Path=FontFamilies}"
							SelectedItem="{Binding Path=FontFamily}"
							IsTabStop="true" TabIndex="2" Height="Auto"/>
				</Grid>
				
				<!--Typeface and other stuff -->
				<Grid Grid.Column="1">
					<Grid.RowDefinitions>
						<RowDefinition Height="Auto"/> <!-- Typeface Title -->
						<RowDefinition Height="Auto"/> <!-- Typeface TextBox -->
						<RowDefinition /><!-- Typeface ListBox -->
						<RowDefinition Height="Auto"/> <!-- FontSize & Color Title -->
						<RowDefinition Height="Auto"/> <!-- FontSize & Color TextBox -->
						<RowDefinition /><!-- FontSize & Color ListBox -->
					</Grid.RowDefinitions>
					<Grid.ColumnDefinitions>
						<ColumnDefinition/>
						<ColumnDefinition Width="Auto"/> <!--Decorations-->
						<ColumnDefinition/> <!--Color-->
					</Grid.ColumnDefinitions>

					<!--Typeface -->
					<Label Grid.ColumnSpan="3" 
						   Style="{StaticResource mainLabelStyle}">Typeface:</Label>
					<TextBox Grid.Row="1" Grid.ColumnSpan="3" Name="txtTypeface" 
							Style="{StaticResource mainTextBoxStyle}"
							Text="{Binding Path=Typeface,
								Converter={StaticResource typefaceToStringConverter}}"
							TextChanged="txtTypeface_Changed"
							IsTabStop="true" TabIndex="3"/>
					<ListBox Grid.Row="2" Grid.ColumnSpan="3" Name="lbxTypeface"
							Style="{StaticResource mainListBoxStyle}" Height="Auto"
							ItemsSource="{Binding Path=Typefaces}"
							SelectedItem="{Binding Path=Typeface}"
							ItemTemplate="{StaticResource typefaceTemplate}"
							IsTabStop="true" TabIndex="4"/>

					<!--Font Size -->
					<Label Grid.Row="3" Style="{StaticResource mainLabelStyle}">Size:</Label>
					<TextBox Grid.Row="4" Name="txtFontSize"
							Style="{StaticResource mainTextBoxStyle}" MinWidth="10"
							Text="{Binding Path=FontSize, UpdateSourceTrigger=PropertyChanged,
								ValidatesOnExceptions=True, ValidatesOnDataErrors=True}"
							TextChanged="txtFontSize_Changed" 
							IsTabStop="True" TabIndex="5"/>
					<ListBox Grid.Row="5" Name="lbxFontSize" 
							Style="{StaticResource mainListBoxStyle}" Height="Auto"
							ItemsSource="{Binding Path=FontSizes}"
							SelectedItem="{Binding Path=FontSize, FallbackValue={x:Null}}"
							IsTabStop="True" TabIndex="5"/>

					<!-- Decorations -->
					<Label Grid.Row="3" Grid.Column="1" Style="{StaticResource mainLabelStyle}">Decorations:</Label>
					<StackPanel Grid.Row="4" Grid.RowSpan="2" Grid.Column="1">
						<CheckBox IsChecked="{Binding Path=Underline}"
							  Style="{StaticResource decorationChkBoxStyle}">Underline</CheckBox>
						<CheckBox IsChecked="{Binding Path=Strikethrough}"
							  Style="{StaticResource decorationChkBoxStyle}">Strikethrough</CheckBox>
						<CheckBox IsChecked="{Binding Path=Overline}"
							  Style="{StaticResource decorationChkBoxStyle}">Overline</CheckBox>
						<CheckBox IsChecked="{Binding Path=Baseline}"
							  Style="{StaticResource decorationChkBoxStyle}">Baseline</CheckBox>
					</StackPanel>

					<!--Color -->
					<Label Grid.Row="3" Grid.Column="2" 
						   Style="{StaticResource mainLabelStyle}">Color:</Label>
					<TextBox Grid.Row="4" Grid.Column="2" Name="txtColor"
							Style="{StaticResource mainTextBoxStyle}"
							Text="{Binding ElementName=lbxColor, Path=SelectedItem.Name}"
							TextChanged="txtColor_Changed" 
							IsTabStop="True" TabIndex="6"/>
					<ListBox Grid.Row="5" Grid.Column="2" Name="lbxColor" Grid.IsSharedSizeScope="True"
							Style="{StaticResource mainListBoxStyle}" Height="Auto"
							ItemsSource="{Binding Path=NamedBrushes}"
							SelectedItem="{Binding Path=FontColor, Converter={StaticResource colorToNamedBrushConverter}}"
							ItemTemplate="{StaticResource namedBrushTemplate}"
							IsTabStop="True" TabIndex="7"/>
				</Grid>
			</Grid>
			
			<!-- Font details -->
			<Expander Grid.Row="1" Header="Font details" MaxHeight="200" Margin="0 10 0 0" 
					  IsExpanded="{Binding Path=IsFontDetailsExpanded}">
				<TabControl Margin="3 0 3 0" Name="tabctrlFontDetailsViewer" 
							BorderThickness="0.75">

					<!--Family and typeface samples-->
					<TabItem Header="Family and typeface samples">
						<Grid Margin="3 0 3 3">
							<Grid.ColumnDefinitions>
								<ColumnDefinition/> <!-- Family typefaces -->
								<ColumnDefinition/> <!-- Typeface sizes -->
							</Grid.ColumnDefinitions>
							<Grid.RowDefinitions>
								<RowDefinition Height="Auto"/>	<!-- Title -->
								<RowDefinition/> <!-- Sample -->
							</Grid.RowDefinitions>
							
							<!--FamilyTypefaceSamples column-->
							<TextBlock Margin="3" xml:space="preserve">Font family: <TextBlock Text="{Binding Path=FontFamily.Source}"/></TextBlock>
							<ListBox Grid.Row="1" Name="lbxFamilyTypefaceSamples"
								Margin="3 0 0 0" Padding="3" BorderThickness="0.75" Background="White"
								ItemsSource="{Binding Path=NamedTypefaces}"
								IsTabStop="false" TabIndex="-1">
								<ListBox.ItemTemplate>
									<DataTemplate>
										<StackPanel>
											<TextBlock Text="{Binding Path=Name}"
												FontFamily="Palatino Linotype"
												FontSize="7.5pt"/> 
											<TextBlock
												FontFamily="{Binding ElementName=txtPreview, Path=FontFamily}"
												FontStyle="{Binding Path=Typeface.Style}"
												FontWeight="{Binding Path=Typeface.Weight}"
												FontStretch="{Binding Path=Typeface.Stretch}"
												FontSize="14"
												Margin="0 0 0 5">
												The quick brown fox jumps over the lazy dog
											</TextBlock>
										</StackPanel>
									</DataTemplate>
								</ListBox.ItemTemplate>
							</ListBox>

							<!--TypefaceSizeSamples column-->
							<TextBlock Grid.Column="1" Margin="3" xml:space="preserve">Typeface: <TextBlock Text="{Binding Path=TypefaceName}"/></TextBlock>
							<ListBox Grid.Column="1" Grid.Row="1" Name="lbxTypefaceSizeSamples"
								Margin="3 0 0 0" Padding="3" BorderThickness="0.75" Background="White"
								ItemsSource="{Binding Path=SampleFontSizes}"
								IsTabStop="false" TabIndex="-1"
							>
								<ListBox.ItemTemplate>
									<DataTemplate>
										<StackPanel>
											<TextBlock Text="{Binding}"
												FontFamily="Palatino Linotype"
												FontSize="7.5pt"> 
												<TextBlock xml:space="preserve"> Points</TextBlock>
											</TextBlock>
											<TextBlock
												FontFamily="{Binding ElementName=txtPreview, Path=FontFamily}"
												FontStyle="{Binding ElementName=txtPreview, Path=FontStyle}"
												FontWeight="{Binding ElementName=txtPreview, Path=FontWeight}"
												FontStretch="{Binding ElementName=txtPreview, Path=FontStretch}"
												FontSize="{Binding}"
												Margin="0 0 0 5">
												The quick brown fox jumps over the lazy dog
											</TextBlock>
										</StackPanel>
									</DataTemplate>
								</ListBox.ItemTemplate>
							</ListBox>
						</Grid>
					</TabItem>

					<!--Typographic features-->
					<TabItem Header="Typographic features">
						<Grid Margin="3 0 3 3">
							<Grid.ColumnDefinitions>
								<ColumnDefinition /> <!-- Family typefaces -->
							</Grid.ColumnDefinitions>
							<Grid.RowDefinitions>
								<RowDefinition Height="Auto" /> <!-- Title -->
								<RowDefinition /> <!-- List of selectable features with samples -->
							</Grid.RowDefinitions>
							
							<TextBlock Margin="3" xml:space="preserve">Typographic features for: <TextBlock Text="{Binding Path=FontFamily.Source}"/></TextBlock>
							<ScrollViewer Grid.Row="1"
								Margin="0" Padding="3" BorderThickness="0.75" Background="White"
								VerticalScrollBarVisibility="Auto"
								>
								<StackPanel Grid.IsSharedSizeScope="true">
									<StackPanel.Resources>
										<Style TargetType="{x:Type ColumnDefinition}">
											<Setter Property="Width" Value="Auto" />
										</Style>
										<Style TargetType="{x:Type RowDefinition}">
											<Setter Property="Height" Value="Auto" />
										</Style>
										<Style x:Key="typographyLabelStyle" TargetType="{x:Type TextBlock}">
											<Setter Property="Margin" Value="2 6 2 2" />
										</Style>
										<Style x:Key="typographyButtonStyle" TargetType="{x:Type RadioButton}">
											<Setter Property="Grid.Column" Value="0" />
											<Setter Property="Margin" Value="16 2 2 2" />
										</Style>
										<Style x:Key="typographySampleStyle" TargetType="{x:Type TextBlock}">
											<Setter Property="Grid.Column" Value="1" />
											<Setter Property="Margin" Value="4 1 0 0" />
											<Setter Property="Text" Value="{Binding ElementName=txtPreview, Path=Text}"/>
											<Setter Property="FontFamily" Value="{Binding Path=FontFamily}"/>
											<Setter Property="FontSize" Value="14"/>
											<Setter Property="FontWeight" Value="{Binding Path=Typeface.Weight}"/>
											<Setter Property="FontStretch" Value="{Binding Path=Typeface.Stretch}"/>
											<Setter Property="FontStyle" Value="{Binding Path=Typeface.Style}"/>
											<Setter Property="TextDecorations" Value="{Binding Path=Decorations}"/>
											<Setter Property="Foreground" Value="{Binding Path=FontColor, Converter={StaticResource colorToBrushConverter}}"/>
											<Setter Property="Typography.AnnotationAlternates" Value="{Binding Path=AnnotationAlternates}"/>
											<Setter Property="Typography.Capitals" Value="{Binding Path=Capitals}"/>
											<Setter Property="Typography.CapitalSpacing" Value="{Binding Path=CapitalSpacing}"/>
											<Setter Property="Typography.CaseSensitiveForms" Value="{Binding Path=CaseSensitiveForms}"/>
											<Setter Property="Typography.ContextualAlternates" Value="{Binding Path=ContextualAlternates}"/>
											<Setter Property="Typography.ContextualLigatures" Value="{Binding Path=ContextualLigatures}"/>
											<Setter Property="Typography.ContextualSwashes" Value="{Binding Path=ContextualSwashes}"/>
											<Setter Property="Typography.DiscretionaryLigatures" Value="{Binding Path=DiscretionaryLigatures}"/>
											<Setter Property="Typography.EastAsianExpertForms" Value="{Binding Path=EastAsianExpertForms}"/>
											<Setter Property="Typography.EastAsianLanguage" Value="{Binding Path=EastAsianLanguage}"/>
											<Setter Property="Typography.EastAsianWidths" Value="{Binding Path=EastAsianWidths}"/>
											<Setter Property="Typography.Fraction" Value="{Binding Path=Fraction}"/>
											<Setter Property="Typography.HistoricalForms" Value="{Binding Path=HistoricalForms}"/>
											<Setter Property="Typography.HistoricalLigatures" Value="{Binding Path=HistoricalLigatures}"/>
											<Setter Property="Typography.Kerning" Value="{Binding Path=Kerning}"/>
											<Setter Property="Typography.MathematicalGreek" Value="{Binding Path=MathematicalGreek}"/>
											<Setter Property="Typography.NumeralAlignment" Value="{Binding Path=NumeralAlignment}"/>
											<Setter Property="Typography.NumeralStyle" Value="{Binding Path=NumeralStyle}"/>
											<Setter Property="Typography.SlashedZero" Value="{Binding Path=SlashedZero}"/>
											<Setter Property="Typography.StandardLigatures" Value="{Binding Path=StandardLigatures}"/>
											<Setter Property="Typography.StandardSwashes" Value="{Binding Path=StandardSwashes}"/>
											<Setter Property="Typography.StylisticAlternates" Value="{Binding Path=StylisticAlternates}"/>
											<Setter Property="Typography.StylisticSet1" Value="{Binding Path=StylisticSet1}"/>
											<Setter Property="Typography.StylisticSet2" Value="{Binding Path=StylisticSet2}"/>
											<Setter Property="Typography.StylisticSet3" Value="{Binding Path=StylisticSet3}"/>
											<Setter Property="Typography.StylisticSet4" Value="{Binding Path=StylisticSet4}"/>
											<Setter Property="Typography.StylisticSet5" Value="{Binding Path=StylisticSet5}"/>
											<Setter Property="Typography.StylisticSet6" Value="{Binding Path=StylisticSet6}"/>
											<Setter Property="Typography.StylisticSet7" Value="{Binding Path=StylisticSet7}"/>
											<Setter Property="Typography.StylisticSet8" Value="{Binding Path=StylisticSet8}"/>
											<Setter Property="Typography.StylisticSet9" Value="{Binding Path=StylisticSet9}"/>
											<Setter Property="Typography.StylisticSet10" Value="{Binding Path=StylisticSet10}"/>
											<Setter Property="Typography.StylisticSet11" Value="{Binding Path=StylisticSet11}"/>
											<Setter Property="Typography.StylisticSet12" Value="{Binding Path=StylisticSet12}"/>
											<Setter Property="Typography.StylisticSet13" Value="{Binding Path=StylisticSet13}"/>
											<Setter Property="Typography.StylisticSet14" Value="{Binding Path=StylisticSet14}"/>
											<Setter Property="Typography.StylisticSet15" Value="{Binding Path=StylisticSet15}"/>
											<Setter Property="Typography.StylisticSet16" Value="{Binding Path=StylisticSet16}"/>
											<Setter Property="Typography.StylisticSet17" Value="{Binding Path=StylisticSet17}"/>
											<Setter Property="Typography.StylisticSet18" Value="{Binding Path=StylisticSet18}"/>
											<Setter Property="Typography.StylisticSet19" Value="{Binding Path=StylisticSet19}"/>
											<Setter Property="Typography.StylisticSet20" Value="{Binding Path=StylisticSet20}"/>
											<Setter Property="Typography.Variants" Value="{Binding Path=Variants}"/>
										</Style>
									</StackPanel.Resources>

									<!--Header-->
									<Grid>
										<Grid.ColumnDefinitions>
											<ColumnDefinition SharedSizeGroup="C0" />
											<ColumnDefinition SharedSizeGroup="C1" />
										</Grid.ColumnDefinitions>
										<Grid.RowDefinitions>
											<RowDefinition />
										</Grid.RowDefinitions>
										
										<TextBlock FontWeight="Bold">Typographic feature</TextBlock>
										<TextBlock Grid.Column="1" FontWeight="Bold">Sample</TextBlock>
									</Grid>

									<!--AnnotationAlternates-->
									<Grid>
										<Grid.ColumnDefinitions>
											<ColumnDefinition SharedSizeGroup="C0" />
											<ColumnDefinition SharedSizeGroup="C1" />
										</Grid.ColumnDefinitions>
										<Grid.RowDefinitions>
											<RowDefinition />
											<RowDefinition />
											<RowDefinition />
											<RowDefinition />
											<RowDefinition />
										</Grid.RowDefinitions>

										<TextBlock Style="{StaticResource typographyLabelStyle}">Annotation alternates</TextBlock>
										<RadioButton Grid.Row="1" Style="{StaticResource typographyButtonStyle}" 
													 Name="AnnotationAlternatesNoneButton"
													 IsChecked="{Binding Path=AnnotationAlternates
														, Converter={StaticResource intValueToParamEquality}
														, ConverterParameter=0}">
											None
										</RadioButton>
										<TextBlock Grid.Row="1" Style="{StaticResource typographySampleStyle}" 
												   Typography.AnnotationAlternates="0"
												   Name="AnnotationAlternatesNoneSample" />
										<RadioButton Grid.Row="2" Style="{StaticResource typographyButtonStyle}" 
													 Name="AnnotationAlternatesSet1Button"
													 IsChecked="{Binding Path=AnnotationAlternates
														, Converter={StaticResource intValueToParamEquality}
														, ConverterParameter=1}">
											Set 1
										</RadioButton>
										<TextBlock Grid.Row="2" Style="{StaticResource typographySampleStyle}" 
												   Typography.AnnotationAlternates="1"
												   Name="AnnotationAlternatesSet1Sample" />
										<RadioButton Grid.Row="3" Style="{StaticResource typographyButtonStyle}" 
													 Name="AnnotationAlternatesSet2Button"
													 IsChecked="{Binding Path=AnnotationAlternates
														, Converter={StaticResource intValueToParamEquality}
														, ConverterParameter=2}">
											Set 2
										</RadioButton>
										<TextBlock Grid.Row="3" Style="{StaticResource typographySampleStyle}" 
												   Typography.AnnotationAlternates="2"
												   Name="AnnotationAlternatesSet2Sample" />
										<RadioButton Grid.Row="4" Style="{StaticResource typographyButtonStyle}" 
													 Name="AnnotationAlternatesSet3Button"
													 IsChecked="{Binding Path=AnnotationAlternates
														, Converter={StaticResource intValueToParamEquality}
														, ConverterParameter=3}">
											Set 3
										</RadioButton>
										<TextBlock Grid.Row="4" Style="{StaticResource typographySampleStyle}" 
												   Typography.AnnotationAlternates="3"
												   Name="AnnotationAlternatesSet3Sample" />
									</Grid>

									<!--Capitals-->
									<Grid>
										<Grid.ColumnDefinitions>
											<ColumnDefinition SharedSizeGroup="C0" />
											<ColumnDefinition SharedSizeGroup="C1" />
										</Grid.ColumnDefinitions>
										<Grid.RowDefinitions>
											<RowDefinition />
											<RowDefinition />
											<RowDefinition />
											<RowDefinition />
											<RowDefinition />
											<RowDefinition />
											<RowDefinition />
											<RowDefinition />
										</Grid.RowDefinitions>
										
										<TextBlock Style="{StaticResource typographyLabelStyle}">Capitals</TextBlock>
										<RadioButton Grid.Row="1" Style="{StaticResource typographyButtonStyle}" 
													 Name="CapitalsNormalButton"
													 IsChecked="{Binding Path=Capitals
														, Converter={StaticResource valueToParamEquality}
														, ConverterParameter={x:Static win:FontCapitals.Normal}}">
											Normal
										</RadioButton>
										<TextBlock Grid.Row="1" Style="{StaticResource typographySampleStyle}" 
												   Typography.Capitals="Normal"
												   Name="CapitalsNormalSample" />
										<RadioButton Grid.Row="2" Style="{StaticResource typographyButtonStyle}" 
													 Name="CapitalsAllSmallButton"
						 	 						 IsChecked="{Binding Path=Capitals
														, Converter={StaticResource valueToParamEquality}
														, ConverterParameter={x:Static win:FontCapitals.AllSmallCaps}}">
											All small
										</RadioButton>
										<TextBlock Grid.Row="2" Style="{StaticResource typographySampleStyle}" 
												   Typography.Capitals="AllSmallCaps"
												   Name="CapitalsAllSmallSample" />
										<RadioButton Grid.Row="3" Style="{StaticResource typographyButtonStyle}" 
													 Name="CapitalsSmallButton"
						 	 						 IsChecked="{Binding Path=Capitals
														, Converter={StaticResource valueToParamEquality}
														, ConverterParameter={x:Static win:FontCapitals.SmallCaps}}">
											Small
										</RadioButton>
										<TextBlock Grid.Row="3" Style="{StaticResource typographySampleStyle}" 
												   Typography.Capitals="SmallCaps"
												   Name="CapitalsSmallSample" />
										<RadioButton Grid.Row="4" Style="{StaticResource typographyButtonStyle}" 
													 Name="CapitalsAllPetiteButton"
						 	 						 IsChecked="{Binding Path=Capitals
														, Converter={StaticResource valueToParamEquality}
														, ConverterParameter={x:Static win:FontCapitals.AllPetiteCaps}}">
											All petite
										</RadioButton>
										<TextBlock Grid.Row="4" Style="{StaticResource typographySampleStyle}" 
												   Typography.Capitals="AllPetiteCaps"
												   Name="CapitalsAllPetiteSample" />
										<RadioButton Grid.Row="5" Style="{StaticResource typographyButtonStyle}" 
													 Name="CapitalsPetiteButton"
						 	 						 IsChecked="{Binding Path=Capitals
														, Converter={StaticResource valueToParamEquality}
														, ConverterParameter={x:Static win:FontCapitals.PetiteCaps}}">
											Petite
										</RadioButton>
										<TextBlock Grid.Row="5" Style="{StaticResource typographySampleStyle}" 
												   Typography.Capitals="PetiteCaps"
												   Name="CapitalsPetiteSample" />
										<RadioButton Grid.Row="6" Style="{StaticResource typographyButtonStyle}" 
													 Name="CapitalsUnicaseButton"
						 	 						 IsChecked="{Binding Path=Capitals
														, Converter={StaticResource valueToParamEquality}
														, ConverterParameter={x:Static win:FontCapitals.Unicase}}">
											Unicase
										</RadioButton>
										<TextBlock Grid.Row="6" Style="{StaticResource typographySampleStyle}" 
												   Typography.Capitals="Unicase"
												   Name="CapitalsUnicaseSample" />
										<RadioButton Grid.Row="7" Style="{StaticResource typographyButtonStyle}" 
													 Name="CapitalsTitlingButton"
						 	 						 IsChecked="{Binding Path=Capitals
														, Converter={StaticResource valueToParamEquality}
														, ConverterParameter={x:Static win:FontCapitals.Titling}}">
											Titling
										</RadioButton>
										<TextBlock Grid.Row="7" Style="{StaticResource typographySampleStyle}" 
												   Typography.Capitals="Titling"
												   Name="CapitalsTitlingSample" />
									</Grid>

